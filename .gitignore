# 1. Initialize a new Git repo
git init

# 2. Create a .gitignore
cat << 'EOF' > .gitignore
# Python
__pycache__/
*.py[cod]
*$py.class
*.so
.Python
build/
develop-eggs/
dist/
downloads/
eggs/
.eggs/
lib/
lib64/
parts/
sdist/
var/
wheels/
*.egg-info/
.installed.cfg
*.egg

# Virtual Environment
venv/
env/
ENV/

# IDE
.idea/
.vscode/
*.swp
*.swo

# Jupyter Notebook
.ipynb_checkpoints

# Data files
*.csv
*.xlsx
*.xls
*.pkl
*.model
*.bin

# Logs
*.log
logs/
EOF

# 3. Stage & commit
git add .
git commit -m "chore: initial repo setup with .gitignore"
